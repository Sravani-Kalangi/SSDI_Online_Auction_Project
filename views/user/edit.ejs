<%- include('../partials/header.ejs')%>
<main>
<div>
    <form action = '/users?_method=PUT' method = 'POST'>
        <div class="formElement">        
            <label for="firstName">First Name</label>
            <input type="text" id="firstName" name="firstName" class = "fixed-width" value = "<%= user.firstName%>" required>
        </div>
        <div class="formElement">
            <label for="lastName">Last Name</label>
            <input type="text" id="lastName" name="lastName" class = "fixed-width" value = "<%= user.lastName%>" required>
        </div>
        <div class="formElement">
            <label for="city">City</label>
            <input type="text" id="city" name="city" class = "fixed-width" value = "<%= user.city%>" required>
        </div>
        <div class="formElement">
            <label for="password">Password</label>
            <input type="password" id="password" name="password" class = "fixed-width" value = "<%= user.password%>" minlength="8" required>
        </div>           
        <div class="formElement">
            <input class="submitBtn" type="submit" value="Submit"/>
        </div>
    </form>
</div>
</main>
<%- include('../partials/footer.ejs')%>
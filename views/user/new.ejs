<%- include('../partials/header.ejs')%>
<main>
<div>
    <form action = '/users' method = 'POST'>
        <div class="formElement">        
            <label for="firstName">First Name</label>
            <input type="text" id="firstName" name="firstName" class = "fixed-width" required>
        </div>
        <div class="formElement">
            <label for="lastName">Last Name</label>
            <input type="text" id="lastName" name="lastName" class = "fixed-width" required>
        </div>
        <div class="formElement">
            <label for="email">Email Address</label>
            <input type="email" id="email" name="email" class = "fixed-width" required>
        </div>
        <div class="formElement">
            <label for="password">Password</label>
            <input type="password" id="password" name="password" class = "fixed-width" minlength="8" required>
        </div>           
        <div class="formElement">
            <input class="submitBtn" type="submit" value="Sign Up"/>
        </div>
    </form>
</div>
</main>
<%- include('../partials/footer.ejs')%>



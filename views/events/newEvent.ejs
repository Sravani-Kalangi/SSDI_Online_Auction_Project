<%- include('../partials/header.ejs')%>
    <main>
        <section>
            
                <h4>
                    Create a new event!
                </h4>
                <div class="new_event">
                    <form action="/events" method = 'POST'>
                        <div class="formElement">
                            <label for="category">Category</label>
                            <input type="text" id="category" name="category" placeholder="Enter event category" required>
                        </div>
                        <div class="formElement">
                            <label for="title">Title</label>
                            <input type="text" id="title" name="title" placeholder="Enter event name" required>

                        </div>
                        <div class="formElement">
                            <label for="eventDate">When</label>
                            <input type="date" id="eventDate" name="eventDate" required>
                        </div>
                        <div class="formElement">
                            <label for="startTime">Start Time</label>
                            <input class="time" type="time" id="startTime" name="startTime" required> 
                        </div>
                        <div class="formElement">
                            <label for="startTime">End Time</label>
                            <input class="time" type="time" id="endTime" name="endTime" required>
                        </div>
                        <div class="formElement">
                            <label for="address">Where</label>
                            <input type="text" id="address" name="address" placeholder="Enter address" required>
                        </div>
                        <div class="formElement">
                            <label for="city">Where</label>
                            <input type="text" id="city" name="city" placeholder="Enter city" required>
                        </div>                        
                        <div class="formElement">
                            <label for="details">Details</label>
                            <textarea rows="5" cols="50" name="details" id="details" placeholder="Enter description" required minlength="10"></textarea>
                        </div>
                        <div class="formElement">
                            <label for="imageURL">Image URL</label>
                            <input type="text" id="imageURL" name="imageURL" placeholder="Enter image URL" required>
                        </div>
                        <div class="formElement">
                            <input class="submitBtn" type="submit" value="Create Event"/>
                        </div>
                    </form>
                </div>
            
        </section>
    </main>
<%- include('../partials/footer.ejs')%>

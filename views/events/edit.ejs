<%- include('../partials/header.ejs')%>
<main>
        <section>
                <h4>
                    Edit event!
                </h4>
                <div class="edit_event">
                    <form method = "POST" action= "/events/<%= event._id%>?_method=PUT">
                        <div class="formElement">
                            <label for="category">Category</label>
                            <input type="text" id="category" name="category" value = "<%= event.category%>" required>
                        </div>
                        <div class="formElement">
                            <label for="title">Title</label>
                            <input type="text" id="title" name="title" value = "<%= event.title%>" required>
                        </div>
                        <div class="formElement">
                            <label for="eventDate">When</label>
                            <input type="date" id="eventDate" name="eventDate" value = "<%= event.eventDate%>" required>
                        </div>
                        <div class="formElement">
                            <label for="startTime">Start Time</label>
                            <input class="time" type="time" id="startTime" name="startTime" value = "<%= event.startTime%>" required> 
                        </div>
                        <div class="formElement">
                            <label for="startTime">End Time</label>
                            <input class="time" type="time" id="endTime" name="endTime" value = "<%= event.endTime%>" required>
                        </div>
                        <div class="formElement">
                            <label for="address">Where</label>
                            <input type="text" id="address" name="address"  value = "<%= event.address%>" required>
                        </div>
                        <div class="formElement">
                            <label for="details">Details</label>
                            <textarea rows="5" cols="50" name="details" id="details" required minlength="10"><%= event.details%></textarea>
                        </div>
                        <div class="formElement">
                            <label for="imageURL">Image URL</label>
                            <input type="text" id="imageURL" name="imageURL" value = "<%= event.imageURL%>" required>
                        </div>
                        <div class="formElement">
                            <input class="submitBtn" type="submit" value="Edit Event"/>
                        </div>
                    </form>
                </div>
            
        </section>
    </main>
<%- include('../partials/footer.ejs')%>
